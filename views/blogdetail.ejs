<script>
    function giveLike(opt){
        $.ajax("/users/givelike",{
            method: "POST",
            data: {id: "<%= post._id %>",option: opt},
            success: function (result){
                if(result.status){
                    location.reload();
                } else {
                    alert("Alert something was wrong");
                }
                },
            });
        };
        function giveComment(){
            if ($("#comment").val()==""){
                alert("Please comment something");
                $("#comment").focus();
            }else{
              
        $.ajax("/users/givecomment",{
            method: "POST",
            data: {
                pid: "<%= post._id %>",
                comment:$("#comment").val(),
            aid:"<%=post.author.id %>",
        },
            success: function (result){
                if(result.status){
